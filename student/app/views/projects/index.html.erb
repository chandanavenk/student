<h1>Listing projects</h1>

<table>
  <tr>
    <th>Project name</th>
    <th>Team name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.project_name %></td>
    <td><%= project.team_name %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<h2>Students with Distinction</h2>

<table>
<tr>
<th>Full Name</th>
<!-- <th>Total</th> -->
</tr>

<% @stumarks.each do |stumark| %>

  <tr>
    <% avg = ((stumark.Mathematics +  stumark.Science  +  stumark.Social)/3)%>

    <% if avg>70 %>
    <td><%= stumark.Full_Name %></td>
    <% end %>
  </tr>
  <% end %>
</table>
