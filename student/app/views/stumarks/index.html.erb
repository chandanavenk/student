<h1>Listing Students Marks</h1>

<table>
  <tr>
    <th>Full name</th>
    <th>Class</th>
    <th>Mathematics</th>
    <th>Science</th>
    <th>Social</th>
    <th>Total</th>
    <th>Average</th>
    <th>Rank</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stumarks.each do |stumark| %>
  <tr>
    <td><%= stumark.Full_Name %></td>
    <td><%= stumark.Class %></td>
    <td><%= stumark.Mathematics %></td>
    <td><%= stumark.Science %></td>
    <td><%= stumark.Social %></td>
    <td><%=stumark.Mathematics +  stumark.Science  +  stumark.Social %></td>
    <td><%=avg = ((stumark.Mathematics +  stumark.Science  +  stumark.Social)/3)%></td>
    <% if avg>70
        rank = "Distinction"
    elsif (avg>60 and avg<69)
        rank =  "First Class"
    elsif (avg>50 and avg<59)
        rank = "Second Class"
    else
        rank = "Fail"
    end %>
    <td><%= rank %></td>
    <td><%= link_to 'Show', stumark %></td>
    <td><%= link_to 'Edit', edit_stumark_path(stumark) %></td>
    <td><%= link_to 'Destroy', stumark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

